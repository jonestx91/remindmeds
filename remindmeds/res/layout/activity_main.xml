<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background_blueglow" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center" >

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text=""
        android:background="@drawable/button_addrx_512x512" />
    
    <Button
        android:id="@+id/buttonView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text=""
        android:background="@drawable/button_viewrx_512x512" />

    
</LinearLayout>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center" >
    
    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/button_settings_512x512" />
    
    <Button
        android:id="@+id/buttonCall"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignLeft="@+id/buttonView"
        android:layout_alignTop="@+id/buttonSettings"
        android:background="@drawable/button_call_512x512" />

    
    </LinearLayout>
</LinearLayout>
