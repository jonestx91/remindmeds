<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kokaza118.remindmeds"
    android:versionCode="2"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.kokaza118.remindmeds.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kokaza118.remindmeds.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/PreferencesTheme" >
            <intent-filter>
                <action android:name="com.kokaza118.remindmeds.MAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.kokaza118.remindmeds.AddActivity"
            android:label="@string/app_name"
            android:theme="@style/PreferencesTheme" >
            <intent-filter>
                <action android:name="com.kokaza118.remindmeds.ADDACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.kokaza118.remindmeds.ViewActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.kokaza118.remindmeds.VIEWACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.kokaza118.remindmeds.PrefsActivity"
            android:label="@string/app_name" 
            android:theme="@style/PreferencesTheme">
            <intent-filter>
                <action android:name="com.kokaza118.remindmeds.PREFSACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.kokaza118.remindmeds.CallActivity"
            android:label="@string/app_name"
            android:theme="@style/PreferencesTheme" >
            <intent-filter>
                <action android:name="com.kokaza118.remindmeds.CALLACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.SEND_SMS"/>

</manifest>
